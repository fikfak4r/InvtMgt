<script type="text/javascript">
    $(function () {
        kendo.bind($("#new-ticket-form"), newTicket)
    })
</script>

<div class="row">


    <div class="col-xs-12 col-md-12" id="new-ticket-form">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">New Ticket</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row" id="customer-info">

                    <div class="col-md-12">
                        <div class="form-group">
                            <input data-role="autocomplete" id="customer-list-ddl" style="width:100%" />
                        </div>
                    </div>



                    <div class="col-md-6">
                       
                            <div class="form-group">
                                <label for="ticketId">Ticket ID</label>
                                <input class="form-control"  id="ticketId" placeholder="Ticket Id">
                            </div>
                   

                        <div class="form-group">
                            <label for="customer">Customer</label>
                            <input class="form-control" data-bind="value:email" id="customer" placeholder="Customer">
                        </div>


                        <div class="form-group">
                            <label for="product">Product</label>
                            <input type="email" class="form-control"  id="product" placeholder="Product">
                        </div>
                    </div>


                    <div class="col-md-6">

                        <div class="form-group">
                            <label>Date</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                @*<input type="text" class="form-control" data-inputmask="'alias': 'mm/dd/yyyy'" data-mask="">*@
                                <input id="customer-date" data-role="datetimepicker" value="10/10/2011" data-bind="value:date" title="datepicker" style="width: 100%" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Phone number:</label>

                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <input type="text" class="form-control" data-bind="value:phoneNumber" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="">
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="product">Subject</label>
                            <input type="email" class="form-control" id="subject" placeholder="Subject">
                        </div>

                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">

                        <div class="form-group">
                            <label for="ticketId">Ticket ID</label>
                            <input class="form-control" id="ticketId" placeholder="Ticket Id">
                        </div>


                        <div class="form-group">
                            <label for="customer">Customer</label>
                            <input class="form-control" data-bind="value:email" id="customer" placeholder="Customer">
                        </div>


                        <div class="form-group">
                            <label for="product">Product</label>
                            <input type="email" class="form-control" id="product" placeholder="Product">
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>





</div>
